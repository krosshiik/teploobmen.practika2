@model TestPageModel
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        .container {
            display: flex;
            justify-content: space-between;
        }

        .input-container {
            width: 50%;
            padding-right: 20px;
        }

        .table-container {
            width: 50%;
            overflow: auto;
        }
    </style>
</head>
<div class="text-center">
    <div class="container border p-3">
        <div class="form-group">
            <h2>Расчет теплообмена в противоточном движении кусковых материалов и газов в плотном продуваемом слое</h2>
        </div>
    </div>
    <br />
</div>

<body>
    <div class="container">
        <div class="input-container">
            <h5><b>Введите свои данные для рассчета:</b></h5>
            <br>
            <form action="/Home/TestPage/" method="post">
                <div class="mb-0">
                    <label for="h" class="form-label">Высота слоя, м:</label>
                    <input name="h" class="form-control" id="h" value="@Model.InputData?.H" style="width: 100px;" />
                </div>

                <div class="mb-0">
                    <label for="tmaterial" class="form-label">Начальная температура материала, С:</label>
                    <input name="tmaterial" class="form-control" id="tmaterial" value="@Model.InputData?.Tmaterial" style="width: 100px;" />
                </div>

                <div class="mb-0">
                    <label for="tgaza" class="form-label">Начальная температура газа, С:</label>
                    <input name="tgaza" class="form-control" id="tgaza" value="@Model.InputData?.Tgaza" style="width: 100px;" />
                </div>

                <div class="mb-0">
                    <label for="vgaza" class="form-label">Скорость газа на свободное сечение шахты, м/с:</label>
                    <input name="vgaza" class="form-control" id="vgaza" value="@Model.InputData?.Vgaza" style="width: 100px;" />
                </div>

                <div class="mb-0">
                    <label for="cgaza" class="form-label">Средняя теплоемкость газа:</label>
                    <input name="cgaza" class="form-control" id="cgaza" value="@Model.InputData?.Cgaza" style="width: 100px;" />
                </div>

                <div class="mb-0">
                    <label for="rashod" class="form-label">Расход материалов, кг/с:</label>
                    <input name="rashod" class="form-control" id="rashod" value="@Model.InputData?.Rashod" style="width: 100px;" />
                </div>
                <div class="mb-0">
                    <label for="gmaterial" class="form-label">Теплоемкость материалов, кДж:</label>
                    <input name="gmaterial" class="form-control" id="gmaterial" value="@Model.InputData?.Gmaterial" style="width: 100px;" />
                </div>

                <div class="mb-0">
                    <label for="av" class="form-label">Объемный коэффициент теплоотдачи:</label>
                    <input name="av" class="form-control" id="av" value="@Model.InputData?.AV" style="width: 100px;" />
                </div>

                <div class="mb-0">
                    <label for="dapparata" class="form-label">Диаметр аппарата, м:</label>
                    <input name="dapparata" class="form-control" id="dapparata" value="@Model.InputData?.Dapparata" style="width: 100px;" />
                </div>
                <br />
                <div>
                    <input type="submit" value="Рассчитать" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <br /><br /><br /><br /><br />
        <style>
            .custom-table {
                background-color: #f2f2f2; /* Set the desired background color */
            }

                .custom-table td.bold-text {
                    font-weight: bold;
                }
        </style>
        <div class="table-container">
            
            @if (Model.OutputData != null)
            {
                <table class="table table-hover table-bordered custom-table">
                    <tr>
                        <td class="bold-text text-center">Высота слоя</td>
                        @foreach (var number in Model.OutputData.Rows)
                        {
                            <td class="bold-text text-center">@number.X</td>
                        }
                    </tr>
                    <tr>
                        <td class="bold-text text-center">t</td>
                        @foreach (var number in Model.OutputData.Rows)
                        {
                            <td class="text-center">@number.tmal</td>
                        }
                    </tr>
                    <tr>
                        <td class="bold-text text-center">T</td>
                        @foreach (var number in Model.OutputData.Rows)
                        {
                            <td class="text-center">@number.Tbol</td>
                        }
                    </tr>
                    <tr>
                        <td class="bold-text text-center">Разность t-шек</td>
                        @foreach (var number in Model.OutputData.Rows)
                        {
                            <td class="text-center">@number.Tnt</td>
                        }
                    </tr>
                </table>
            }
        </div>
    </div>
</body>
</html>

